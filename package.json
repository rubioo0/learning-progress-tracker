{
  "name": "learning-progress-tracker",
  "version": "1.0.0",
  "description": "A web-based learning tracker for automation skills curriculum",
  "main": "server-optimized.js",
  "scripts": {
    "start": "node server-optimized.js",
    "dev": "nodemon server-optimized.js",
    "build": "npm run build:css",
    "build:css": "tailwindcss -i ./public/css/input.css -o ./public/css/output.css --watch",
    "postinstall": "npm run build:css-prod",
    "build:css-prod": "tailwindcss -i ./public/css/input.css -o ./public/css/output.css --minify"
  },
  "keywords": ["learning", "progress", "tracker", "curriculum", "automation"],
  "author": "Learning Tracker",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "xlsx": "^0.18.5",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "tailwindcss": "^3.3.6"
  }
}
